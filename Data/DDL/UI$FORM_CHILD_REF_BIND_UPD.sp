CREATE OR ALTER PROCEDURE UI$FORM_CHILD_REF_BIND_UPD (
    I_FORM_CHILD INTEGER,
    I_FORM VARCHAR(30),
    I_BLOCK VARCHAR(30),
    I_REF INTEGER,
    I_DESTINATION_PARAM VARCHAR(30),
    I_SOURCE_CHILD INTEGER,
    I_SOURCE_BLOCK VARCHAR(30),
    I_SOURCE_PARAM VARCHAR(30))
AS
BEGIN
  MERGE INTO UI$FORM_CHILD_REF_BIND RB
    USING (SELECT NULL V FROM RDB$DATABASE)
    ON (
      RB.FORM = :I_FORM AND
      RB.FORM_CHILD = :I_FORM_CHILD AND
      RB."BLOCK" = :I_BLOCK AND
      RB.REF = :I_REF AND
      RB.DESTINATION_PARAM = :I_DESTINATION_PARAM
    )
    WHEN MATCHED THEN UPDATE SET
      RB.SOURCE_CHILD = :I_SOURCE_CHILD,
      RB.SOURCE_BLOCK = :I_SOURCE_BLOCK,
      RB.SOURCE_PARAM = :I_SOURCE_PARAM
    WHEN NOT MATCHED THEN INSERT (FORM_CHILD,FORM,BLOCK,REF,DESTINATION_PARAM,SOURCE_CHILD,SOURCE_BLOCK,SOURCE_PARAM)
    VALUES (:I_FORM_CHILD,:I_FORM,:I_BLOCK,:I_REF,:I_DESTINATION_PARAM,:I_SOURCE_CHILD,:I_SOURCE_BLOCK,:I_SOURCE_PARAM);
END