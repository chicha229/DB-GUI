CREATE OR ALTER PROCEDURE UI$FORM_UPD (
    I_ID VARCHAR(30),
    I_MAIN_PROCEDURE VARCHAR(30),
    I_NAME VARCHAR(100),
    I_CUSTOM_CLASS VARCHAR(100),
    I_IS_MODAL SMALLINT)
AS
BEGIN
  UPDATE UI$FORM T
    SET T.MAIN_PROCEDURE = :I_MAIN_PROCEDURE
    WHERE T.ID=:I_ID;

  UPDATE UI$BLOCK B
    SET
      B.NAME = :I_NAME,
      B.CUSTOM_CLASS = :I_CUSTOM_CLASS,
      B.IS_MODAL = :I_IS_MODAL
    WHERE B.ID = :I_ID;
END