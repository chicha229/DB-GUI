CREATE OR ALTER PROCEDURE UI$BLOCK_REF_CR_D (
    I_ID INTEGER,
    I_BLOCK VARCHAR(30))
RETURNS (
    ID INTEGER,
    "BLOCK" VARCHAR(30),
    REFS_TO VARCHAR(30))
AS
 BEGIN
  FOR
    SELECT T.ID,T.BLOCK,T.REFS_TO
    FROM UI$BLOCK_REF T 
    WHERE
      T.ID = :I_ID AND
      T.BLOCK = :I_BLOCK AND
      1=1
    INTO :ID,:BLOCK,:REFS_TO
  DO SUSPEND;
END