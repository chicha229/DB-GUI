CREATE OR ALTER PROCEDURE UI$FORM_CHILD_REF_BIND_CR_D (
    I_FORM_CHILD INTEGER,
    I_REF INTEGER,
    I_DESTINATION_PARAM VARCHAR(30))
RETURNS (
    FORM_CHILD INTEGER,
    FORM VARCHAR(30),
    "BLOCK" VARCHAR(30),
    REF INTEGER,
    DESTINATION_PARAM VARCHAR(30),
    SOURCE_CHILD INTEGER,
    SOURCE_BLOCK VARCHAR(30),
    SOURCE_PARAM VARCHAR(30))
AS
BEGIN
  FOR
    SELECT
      :I_FORM_CHILD,C.FORM,C.BLOCK,:I_REF,:I_DESTINATION_PARAM,
      T.SOURCE_CHILD,T.SOURCE_BLOCK,T.SOURCE_PARAM
    FROM UI$FORM_CHILD C
    LEFT JOIN UI$FORM_CHILD_REF_BIND T ON
      T.FORM_CHILD = C.ID AND
      T.FORM = C.FORM AND
      T.REF = :I_REF AND
      T.DESTINATION_PARAM = :I_DESTINATION_PARAM
    WHERE
      C.ID = :I_FORM_CHILD AND
      1=1
    INTO :FORM_CHILD,:FORM,:BLOCK,:REF,:DESTINATION_PARAM,:SOURCE_CHILD,:SOURCE_BLOCK,:SOURCE_PARAM
  DO SUSPEND;
END