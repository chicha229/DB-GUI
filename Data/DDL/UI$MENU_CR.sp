CREATE OR ALTER PROCEDURE UI$MENU_CR (
    I_PROJECT D_IDENT)
RETURNS (
    ID INTEGER,
    NAME D_NAME,
    ITEM_TYPE D_IDENT,
    PARENT INTEGER,
    "BLOCK" D_IDENT,
    ORDER_NUM SMALLINT)
AS
BEGIN
  FOR
    SELECT MI.ID, MI.NAME, MI.ITEM_TYPE, MI.PARENT, MI.BLOCK, MI.ORDER_NUM
    FROM UI$MENU_ITEM MI
    ORDER BY MI.ORDER_NUM
    INTO :ID, :NAME, :ITEM_TYPE, :PARENT, :"BLOCK", :ORDER_NUM
  DO
    SUSPEND;
END

COMMENT ON PROCEDURE UI$MENU_CR IS 
'Меню приложения';


COMMENT ON PARAMETER UI$MENU_CR.ID IS 
'Код';
COMMENT ON PARAMETER UI$MENU_CR.ITEM_TYPE IS 
'Тип пункта меню';
COMMENT ON PARAMETER UI$MENU_CR.NAME IS 
'Название';
COMMENT ON PARAMETER UI$MENU_CR.ORDER_NUM IS 
'Порядковый номер в папке';
COMMENT ON PARAMETER UI$MENU_CR.PARENT IS 
'Папка';