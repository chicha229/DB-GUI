CREATE OR ALTER PROCEDURE UI$BLOCK_ACTION_UPD (
    I_ID VARCHAR(30),
    I_BLOCK VARCHAR(30),
    I_CAPTION VARCHAR(100),
    I_LINKS_TO VARCHAR(30),
    I_ACTION_STYLE VARCHAR(30),
    I_IMAGE_INDEX INTEGER,
    I_ORDER_NUM SMALLINT,
    I_REFRESH_MODE VARCHAR(30),
    I_SHORTCUT VARCHAR(100))
AS
begin
  update UI$BLOCK_ACTION T
  set T.CAPTION = :I_CAPTION,
      T.LINKS_TO = :I_LINKS_TO,
      T.ACTION_STYLE = :I_ACTION_STYLE,
      T.IMAGE_INDEX = :I_IMAGE_INDEX,
      T.ORDER_NUM = :I_ORDER_NUM,
      T.REFRESH_MODE = :I_REFRESH_MODE,
      T.SHORTCUT = :I_SHORTCUT
  where T.ID = :I_ID and
        T.BLOCK = :I_BLOCK and
        1 = 1;
end